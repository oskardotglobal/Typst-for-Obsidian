{
  "name": "typst-for-obsidian",
  "version": "0.0.8",
  "description": "A Typst editor integrated into Obsidian, enabling you to create and preview Typst documents seamlessly within your notes.",
  "main": "main.js",
  "scripts": {
    "build:js": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:grammar": "lezer-generator src/grammar/typst.grammar -o src/grammar/typst-parser.js",
    "build:wasm": "wasm-pack build compiler --target web --out-dir ../pkg",
    "build": "npm run build:grammar && npm run build:wasm && npm run build:js",
    "dev:wasm": "wasm-pack build compiler --target web --dev --out-dir ../pkg",
    "dev:js": "node esbuild.config.mjs"
  },
  "keywords": [],
  "author": "k0src",
  "license": "MIT",
  "devDependencies": {
    "@lezer/generator": "^1.8.0",
    "@types/node": "^20",
    "@types/pako": "^2.0.4",
    "builtin-modules": "^3",
    "esbuild": "^0.18",
    "jsdom": "^27.0.0",
    "typescript": "^5.1",
    "wasm-pack": "^0.12.1"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@embedpdf/engines": "^1.3.13",
    "@embedpdf/pdfium": "^1.3.13",
    "@lezer/highlight": "^1.2.1",
    "@lezer/lr": "^1.4.2",
    "@uiw/codemirror-theme-xcode": "^4.25.2",
    "codemirror-helix": "^0.5.0",
    "esbuild-plugin-inline-worker": "^0.1.1",
    "fflate": "^0.8.2",
    "js-untar": "^2.0.0",
    "obsidian": "latest",
    "obsidian-typst": "file:pkg",
    "pako": "^2.1.0",
    "svgo": "^3.0.2",
    "tslib": "^2"
  }
}
