{
  "name": "typst-for-obsidian",
  "version": "0.0.7",
  "description": "A Typst editor integrated into Obsidian, enabling you to create and preview Typst documents seamlessly within your notes.",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:deploy": "node build.js",
    "build:grammar": "lezer-generator src/grammar/typst.grammar -o src/grammar/typst-parser.js",
    "wasm": "wasm-pack build compiler --target web --out-dir ../pkg",
    "wasm-dev": "wasm-pack build compiler --target web --dev --out-dir ../pkg",
    "wasm-build-dev": "npm run wasm-dev && npm run dev",
    "wasm-build": "npm run wasm && npm run build",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "vitest",
    "test:one": "vitest run"
  },
  "keywords": [],
  "author": "k0src",
  "license": "MIT",
  "devDependencies": {
    "@lezer/generator": "^1.8.0",
    "@types/node": "^20",
    "@types/pako": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "builtin-modules": "^3",
    "esbuild": "^0.18",
    "jsdom": "^27.0.0",
    "typescript": "^5.1",
    "vitest": "^3.2.4",
    "wasm-pack": "^0.12.1"
  },
  "dependencies": {
    "@embedpdf/engines": "^1.3.13",
    "@embedpdf/pdfium": "^1.3.13",
    "esbuild-plugin-inline-worker": "^0.1.1",
    "fflate": "^0.8.2",
    "js-untar": "^2.0.0",
    "monaco-editor": "^0.55.1",
    "obsidian": "latest",
    "obsidian-typst": "file:pkg",
    "pako": "^2.1.0",
    "svgo": "^3.0.2",
    "tslib": "^2"
  }
}
